.page-header
  %h1= t('headers.films.index')

%table.table.table-hover.table-striped.center
  %thead
    %tr
      %th= Film.human_attribute_name(:name)
      %th= Film.human_attribute_name(:duration)
      %th= Film.human_attribute_name(:country)
      %th= Film.human_attribute_name(:cinemacompany)
      %th= Film.human_attribute_name(:minage)
      %th
      %th
      %th

  %tbody
    - @films.each do |film|
      %tr
        %td= film.name
        %td= film.duration
        %td= film.country
        %td= film.cinemacompany
        %td= film.minage
        %td= link_to 'Показать', film
        %td= link_to 'Изменить', edit_film_path(film)
        %td= link_to 'Удалить', film, method: :delete, data: { confirm: 'Вы уыерены?' }

%br

= link_to 'Новый фильм', new_film_path
